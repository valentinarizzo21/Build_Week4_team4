@using BeviSano.Controllers
@model EditProduct;

@{
    ViewData["Title"] = "Modifica prodotto";
    var categories = HomeController.categories;
    TempData["Id_Image_One"] = Model.Id_Image_One;
    TempData["Id_Image_Two"] = Model.Id_Image_Two;
    TempData["Id_Image_Three"] = Model.Id_Image_Three;
}


@if(HomeController.MainAccount != null && HomeController.MainAccount.admin)
{
    <div class="container">
        <h4 class="ms-2 mb-4 fw-normal">Stai modificando:<br /><span class="display-1"><i>@Model.Name_Product</i></span></h4>
        <form method="post" asp-controller="Admin" asp-action="SaveEdit" asp-route-id=@Model.Id_Product>
            <div class="card shadow-sm rounded-3 p-4 bg_form_complete">
                <div class="card-body">
                    <input type="hidden" name="Id" asp-for="@Model.Id_Product" />
                    <input type="hidden" name="IdImageOne" value=@Model.Id_Image_One />
                    <input type="hidden" name="IdImageTwo" value=@Model.Id_Image_Two />
                    <input type="hidden" name="IdImageThree" value=@Model.Id_Image_Three />

                    <div class="d-flex justify-content-between g-3">
                        <div class="form-group mb-3 w-75 me-2">
                            <label for="name" class="form-label h5 fw-normal m-3 ms-1" asp-for="Name_Product"></label>
                            <input type="text" class="form-control form-control-lg" id="name" asp-for="Name_Product" required />
                            <span class="text-danger" asp-validation-for="Name_Product"></span>
                        </div>


                        <div class="form-group mb-3 w-25">
                            <label for="price" class="form-label h5 fw-normal m-3 ms-1" asp-for="Price_Product"></label>
                            <input type="number" step="0.01" class="form-control form-control-lg" id="price" asp-for="Price_Product" required />
                            <span class="text-danger" asp-validation-for="Price_Product"></span>
                        </div>

                    </div>


                    <div class="form-group mb-3">
                        <label for="description" class="form-label h5 fw-normal m-3 ms-1" asp-for="Description_Product"></label>
                        <textarea class="form-control form-control-lg" id="description" rows="4" required" asp-for="Description_Product"></textarea>
                        <span class="text-danger" asp-validation-for="Description_Product"></span>
                    </div>


                    <div class="form-group mb-3">
                        <label for="coverImage" class="form-label h5 fw-normal m-3 ms-1" asp-for="Cover_Product"></label>
                        <input type="text" class="form-control form-control-lg" id="coverImage" asp-for="Cover_Product" required />
                        <span class="text-danger" asp-validation-for="Cover_Product"></span>
                    </div>

                    @* Immagini opzionali *@
                    <div class="form-group mb-3">
                        <label for="imageOne" class="form-label h5 fw-normal m-3 ms-1" asp-for="Image_One"></label>
                        <input type="text" class="form-control form-control-lg" id="imageOne" asp-for="Image_One" />
                        <span class="text-danger" asp-validation-for="Image_One"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="imageTwo" class="form-label h5 fw-normal m-3 ms-1" asp-for="Image_Two"></label>
                        <input type="text" class="form-control form-control-lg" id="imageTwo" asp-for="Image_Two" />
                        <span class="text-danger" asp-validation-for="Image_Two"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="ImaheThree" class="form-label h5 fw-normal m-3 ms-1" asp-for="Image_Three"></label>
                        <input type="text" class="form-control form-control-lg" id="ImaheThree" asp-for="Image_Three" />
                        <span class="text-danger" asp-validation-for="Image_Three"></span>
                    </div>
                    @* ------ *@
                    <div class="d-flex justify-content-between">
                        <div class="form-group mb-3 w-75 me-2">
                            <label for="seller" class="form-label h5 fw-normal m-3 ms-1" asp-for="Seller_Product"></label>
                            <input type="text" class="form-control form-control-lg" id="seller" asp-for="Seller_Product" required />
                            <span class="text-danger" asp-validation-for="Seller_Product"></span>
                        </div>
                        <div class="form-group mb-3 w-25">
                            <label for="stock" class="form-label h5 fw-normal m-3 ms-1" asp-for="Stock_Product"></label>
                            <input type="number" step="1" min="0" class="form-control form-control-lg" id="stock" asp-for="Stock_Product" required />
                            <span class="text-danger" asp-validation-for="Stock_Product"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-column justify-content-start w-75">
                            <div class="d-flex justify-content-between">
                                <div class="form-group mb-3 w-50 me-2">
                                    <label for="sale" class="form-label h5 fw-normal m-3 ms-1" asp-for="Sale_Product"></label>
                                    <input type="number" min="0" max="99" step="1" class="form-control form-control-lg" id="sale" asp-for="Sale_Product" required />
                                    <span class="text-danger" asp-validation-for="Sale_Product"></span>
                                </div>

                                <div class="form-group mb-3 w-50">
                                    <label for="deliveryTime" class="form-label h5 fw-normal m-3 ms-1" asp-for="Arrival_Date_Product"></label>
                                    <input type="number" min="0" step="1" class="form-control form-control-lg" id="deliveryTime" asp-for="Arrival_Date_Product" required />
                                    <span class="text-danger" asp-validation-for="Arrival_Date_Product"></span>
                                </div>
                            </div>

                            @* Categoria *@
                            <div class="form-group mb-3 w-50">
                                <label for="Id_Category" class="form-label h5 fw-normal m-3 ms-1" asp-for="Id_Category"></label>
                                <select class="form-select p-2" asp-for="Id_Category">
                                    <option value="-1">-- seleziona una categoria --</option>
                                    @foreach (var category in categories.Categories)
                                    {
                                        <option value=@category.Id_Category>@category.Title</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <img src="~/lib/img/Bevi_Sano_Home.png"
                             alt="Logo"
                             class="w-25 img-fluid"
                             style="max-width: 200px; height: auto; object-fit: contain;" />
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-lg" style="border-color: #915b4a; color: #915b4a;">Annulla</a>
                        <button class="btn btn-success btn-lg" style="background-color: #915b4a; border-color: #915b4a;">Salva Modifiche</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

}
else
{
    <div class="container my-5">
        <h3>Effettua l'accesso come amministratore per vedere questa pagina!</h3>
    </div>
}



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}