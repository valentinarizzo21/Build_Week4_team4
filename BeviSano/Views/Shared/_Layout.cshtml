
﻿@using BeviSano.Controllers

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BeviSano.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm  border-bottom box-shadow  p-0" style="background-color:#915b4a;">
            <div class="container-fluid">
                <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/lib/img/bevi_sano_footer.png" alt="logo_footer" class="img-fluid m-0 p-0 d-block" style="max-width: 110px; max-height: 110px;" /></a>
                <button class="navbar-toggler border-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" >
                    <span class="navbar-toggler-icon"><i class="bi bi-list pt-1 fs-3 text-white"></i></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-start">
                        <li class="nav-item">
                            <a class="nav-link text-white h6 fw-normal px-3 text-decoration-none hover-opacity" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white h6 fw-normal px-3 text-decoration-none hover-opacity" asp-area="" asp-controller="Product" asp-action="Index">E-commerce</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white h6 fw-normal px-3 text-decoration-none hover-opacity" asp-area="" asp-controller="Home" asp-action="FidelityCard">FedelityCard</a>
                        </li>
                        @if (HomeController.MainAccount != null && HomeController.MainAccount.admin == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white h6 fw-normal px-3 text-decoration-none hover-opacity" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }


                    </ul>
                    <div class="d-flex flex-nowrap ms-3 ms-md-0 mb-3">
                        @if (HomeController.MainAccount != null)
							{
								<a asp-controller="Cart" asp-action="Index"><i class="bi bi-cart-fill text-white d-block d-md-none fs-4 pe-3"></i></a>
							}
							else
							{
								<i class="bi bi-cart-fill text-white d-block d-md-none fs-4 pe-3"></i>
							}
                        <i class="bi bi-person-fill text-white  d-block d-md-none fs-4"></i>
                    </div>
                    <div class="text-md-end me-md-5 d-none d-md-block">
                        <ul class="navbar-nav flex-grow-1 ">
                            @if (HomeController.MainAccount != null)
							{
								<a asp-controller="Cart" asp-action="Index">
								<li class="nav-link"><i class="bi bi-cart-fill text-white fs-4 px-2"></i></li></a>
							}
							else
							{
								<li class="nav-link"><i class="bi bi-cart-fill text-white fs-4 px-2"></i></li>
							}
                            <li class="nav-link">
                                <div class="btn-group">
                                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-fill text-white fs-4"></i>
                                    </a>
                                    <ul class="bg-secondary dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#">Opzione 1</a></li>
                                        <li><a class="dropdown-item" href="#">Opzione 2</a></li>
                                        <li><a class="dropdown-item" href="#">Opzione 3</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        @if (HomeController.MainAccount == null)
                                        {
                                            <li><a class="dropdown-item" href="/#login">Accedi</a></li>
                                        }
                                        else
                                        {
                                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                    </div>
                </div>
                </ul>
            </div>





            </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mx-0 px-0">
        <main role="main" class="m-0 ps-0 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg_footer text-white py-5 px-3 mt-5">
        <div class="container">
            <div class="row jus">
                <div class="col-md-4 text-center">
                    <img src="~/lib/img/bevi_sano_footer.png" alt="logo_footer" class="img-fluid mx-auto d-block" style="max-width: 200px; height: auto;" />
                    <p class="mt-2 text-center">
                        Scopri il mondo dei cocktail e bevi con consapevolezza.
                    </p>
                </div>
                <div class="col-md-4 d-flex flex-column flex-md-row justify-content-center justify-content-md-between text-center text-md-start">
                    <div class="color_link ms-md-4 mt-3 mt-md-0 align-self-center">
                        <h3 class="fw-semibold fs-5">Esplora</h3>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Cocktail</a>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Ricette</a>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Consigli</a>
                    </div>
                    <div class="ms-md-4 mt-3 mt-md-0 align-self-center">
                        <h3 class="fw-semibold fs-5">Account</h3>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Accedi</a>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Registrati</a>
                        <a href="javascript:void(0)" class="d-block text-decoration-none hover-opacity">Supporto</a>
                    </div>
                </div>
                <div class="col-md-4 mt-3 text-center text-md-end align-self-center">
                    <h3 class="fw-semibold fs-5">Seguici:</h3>
                    <div class="d-flex justify-content-center justify-content-md-end gap-3">
                        <a href="javascript:void(0)" class="hover-opacity">
                            <img src="~/lib/img/facebook_icon.png" alt="Facebook" class="img-fluid" style="width: 40px; height: 30px;">
                        </a>
                        <a href="javascript:void(0)" class="hover-opacity">
                            <img src="~/lib/img/instagram_logo.png" alt="Instagram" class="img-fluid" style="width: 30px; height: 30px;">
                        </a>
                        <a href="javascript:void(0)" class="hover-opacity">
                            <img src="~/lib/img/whatsapp_icon.png" alt="Whatsapp" class="img-fluid" style="width: 30px; height: 30px;">
                        </a>
                    </div>
                </div>
            </div>
            <hr class="mt-4">
            <div class="text-center mt-3">
                <p class="fst-italic">© 2025 Bevi Sano. Bevi responsabilmente.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="javascript:void(0)" class="text-decoration-none">Privacy Policy</a>
                    <a href="javascript:void(0)" class="text-decoration-none">Termini e Condizioni</a>
                    <a href="javascript:void(0)" class="text-decoration-none">Contattaci</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
